{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "no-var": 0,
    "no-console": 0,
    "no-extra-parens": 1,
    "curly": ["error", "multi"],
    "dot-notation": 1,
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-empty-function": 2,
    "no-eval": 0,
    "no-constructor-return": 1,
    // "no-implicit-globals": 0
    "no-invalid-this": 2,
    "no-return-await": 1,
    "no-self-compare": 1,
    "no-useless-catch": 1,
    "no-useless-return": 1,
    "no-useless-escape": 0,
    "require-await": 2,
    "vars-on-top": 1,
    "no-label-var": 2,
    "no-shadow": 2,
    "prefer-regex-literals": 1,
    // ...
    "camelcase": 1,
    "comma-dangle": ["error", {
      "arrays": "never",
      "objects": "never",
      "imports": "never",
      "exports": "never",
      "functions": "never"
    }],
    "comma-style": ["error", "last"],
    "indent": ["error", "tab"],
    "no-array-constructor": 2,
    "no-trailing-spaces": 2,
    "arrow-spacing": 2,
    "prefer-spread": 1,
    "semi": 2,
    "semi-spacing": 2
  }
}